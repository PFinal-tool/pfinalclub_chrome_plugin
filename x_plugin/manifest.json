{
  "manifest_version": 3,
  "name": "卡文助手",
  "version": "1.0.0",
  "description": "收集和整理 Twitter 内容，自动生成公众号文章",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["lib/*"],
    "matches": ["<all_urls>"]
  }],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api-inference.huggingface.co/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": [],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  }
} 